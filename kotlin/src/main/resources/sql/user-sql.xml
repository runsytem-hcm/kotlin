<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm  http://java.sun.com/xml/ns/persistence/orm_2_1.xsd"
    version="2.1">

    <named-native-query name="getName" result-set-mapping="getValue">
        <query>
            SELECT u.name AS userName,
                   u.address AS address,
                   p.phone AS phone
            FROM user u INNER JOIN phone p ON p.user_id = u.id
            WHERE u.name = :name
        </query>
    </named-native-query>
    <sql-result-set-mapping name="getValue">
        <constructor-result target-class="runsystem.vn.kotlin.UserDataDto">
            <column name="userName" />
            <column name="address" />
            <column name="phone" />
        </constructor-result>
    </sql-result-set-mapping>
</entity-mappings>